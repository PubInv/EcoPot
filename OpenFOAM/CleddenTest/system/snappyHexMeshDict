FoamFile
{
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeEtc "caseDicts/mesh/generation/snappyHexMeshDict.cfg"

castellatedMesh true;
snap            true;
addLayers       true;

geometry
{
    air
    {
        type triSurfaceMesh;
        file "air.stl";

        regions
        {
            inlet	   { name inlet;     }
            outlet         { name outlet;    }
            walls          { name walls;     }
        }
    }

    solid
    {
        type triSurfaceMesh;
        file "flatPotNew.stl";
    }
    
    water
    {
        type triSurfaceMesh;
        file "flatPotContentNew.stl";
    }
};

castellatedMeshControls
{

    
    features
    (
        
        {
           file "air.eMesh";
           levels ((2 3));
        }

        
        {
           file "flatPotNew.eMesh";
           levels ((2 3));
        }
        
        {
           file "flatPotContentNew.eMesh";
           levels ((2 3));
        }
    );
    
    refinementSurfaces
    {
        air
        {
            level (1 3);//(1 3);
            regions
            {
                inlet     { level (1 3); patchInfo { type patch; } }
                outlet    { level (1 3); patchInfo { type patch; } }
                walls	  { level (1 3); patchInfo { type wall;  } }
            }
        }

        solid
        {
            level 	(1 3);
            faceZone 	solidToWater;
            cellZone 	solid;
            mode        insidePoint;
            insidePoint (0 0 1);
        }
        
        water
        {
            level 	(1 3);
            faceZone 	waterToSolid;
            cellZone 	water;
            mode        insidePoint;
            insidePoint (0 0 20);
        }

    }

    nCellsBetweenLevels 1;
    resolveFeatureAngle 45;

    insidePoint (0 0 -10);
}

addLayersControls
{
    relativeSizes       true;
    nSurfaceLayers      4;
    minThickness        1;
    finalLayerThickness 1;
    expansionRatio      1.1;
    layers
    {}
}

