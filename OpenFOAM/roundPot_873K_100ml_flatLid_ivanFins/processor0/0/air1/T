FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0/air1";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 298;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 873;
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform 298;
        value           uniform 298;
    }
    walls
    {
        type            zeroGradient;
    }
    air1_to_solid
    {
        type            coupledTemperature;
        value           uniform 298;
    }
    air1_to_lid
    {
        type            coupledTemperature;
        value           uniform 298;
    }
    procBoundary0to1
    {
        type            processor;
        value           uniform 298;
    }
}


