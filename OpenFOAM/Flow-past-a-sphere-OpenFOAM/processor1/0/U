FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];


internalField   uniform (0.003 0 0);

boundaryField
{
    inlet
    {
        type            freestream;
        freestreamValue uniform (0.003 0 0);
        value           uniform (0.003 0 0);
    }
    outlet
    {
        type            freestream;
        freestreamValue uniform (0.003 0 0);
        value           uniform (0.003 0 0);
    }
    top
    {
        type            freestream;
        freestreamValue uniform (0.003 0 0);
        value           uniform (0.003 0 0);
    }
    bottom
    {
        type            freestream;
        freestreamValue nonuniform List<vector> 0();
        value           nonuniform List<vector> 0();
    }
    sides
    {
        type            freestream;
        freestreamValue uniform (0.003 0 0);
        value           uniform (0.003 0 0);
    }
    procBoundary1to0
    {
        type            processor;
        value           uniform (0.003 0 0);
    }
    procBoundary1to3
    {
        type            processor;
        value           uniform (0.003 0 0);
    }
}


