FoamFile
{
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/constant/initialConditions"

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform $Tinitial;

boundaryField
{
    lid_to_air1
    {
        type            coupledTemperature;
        value           $internalField;
    }
    
    lid_to_air2
    {
        type            coupledTemperature;
        value           $internalField;
    }
    
    lid_to_solid
    {
        type            coupledTemperature;
        value           $internalField;
    }
}


