FoamFile
{
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeEtc "caseDicts/mesh/generation/snappyHexMeshDict.cfg"

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    air
    {
        type triSurfaceMesh;
        file "air.stl";

        regions
        {
            inlet	   { name inlet;     }
            outlet         { name outlet;    }
            walls          { name walls;     }
        }
    }

    solid
    {
        type triSurfaceMesh;
        file "flatPot.stl";
    }
    
    water
    {
        type triSurfaceMesh;
        file "flatPotContent.stl";
    }
};

castellatedMeshControls
{

    
    features
    (
        {
           file "flatPot.eMesh";
           levels ((1 4));
        }
        
        {
           file "flatPotContent.eMesh";
           levels ((1 4));
        }
    );
    
    refinementSurfaces
    {
        air
        {
            level (1 4);
            regions
            {
                inlet     { level (1 4); patchInfo { type patch; } }
                outlet    { level (1 4); patchInfo { type patch; } }
                walls	  { level (0 0); patchInfo { type wall;  } }
            }
        }

        solid
        {
            level 	(1 4);
            faceZone 	solidToWater;
            cellZone 	solid;
            mode        insidePoint;
            insidePoint (0 0 -2.8);
        }
        
        water
        {
            level 	(1 6);
            faceZone 	waterToSolid;
            cellZone 	water;
            mode        insidePoint;
            insidePoint (0 0 0);
        }

    }

    nCellsBetweenLevels 1;
    //resolveFeatureAngle 30;

    insidePoint (3 3 4.5);
}

addLayersControls
{
    relativeSizes       true;
    minThickness        1;
    finalLayerThickness 1;
    expansionRatio      1;
    layers
    {}
}

